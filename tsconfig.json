{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "allowUnusedLabels": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "paths": {
      "@@/*": ["./*"],
      "@/*": ["./src/*"]
    },
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "baseUrl": "./"
  },
  "include": [
    "start.ts",
    "lambda.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "types/*"
  ]
}